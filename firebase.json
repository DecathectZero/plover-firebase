{
  "hosting": {
    "public": "public",
    "ignore": [
      "firebase.json",
      "**/.*",
      "**/node_modules/**"
    ],
    "rewrites": [
    	{
	    	"source": "/about",
	    	"destination": "about.html"
    	},{
	    	"source": "**",
	    	"function": "index.html"
    	}
	]
  },
  "functions": {
    "predeploy": [
      "npm --prefix \"$RESOURCE_DIR\" run lint"
    ]
  }
}
